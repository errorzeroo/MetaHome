<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper
3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.metafinal.metahome.mapper.AptMapper">
    <!-- 아파트의 모든 정보 가져오는 test 코드 -->
    <select id="getAllApt" resultType="Apt">
        SELECT * FROM APT
    </select>
    <!-- 특정 구에 있는 아파트 리스트 조회 -->
    <select id="getAptGu" resultType="Apt">
        SELECT * FROM Apartment
        WHERE APT_ADDRESS LIKE CONCAT('%', #{gu}, '%')
    </select>
</mapper>